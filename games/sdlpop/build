#!/bin/sh -e

make -C src/

install -d                       "$1/usr/share/sdlpop"
cp -r data/                      "$1/usr/share/sdlpop"
cp -r mods/                      "$1/usr/share/sdlpop"
install -Dm755 prince            "$1/usr/share/sdlpop/prince"
install -Dm755 sdlpoplauncher.sh "$1/usr/bin/princeofpersia"
